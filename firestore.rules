
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to stats and user counts for the homepage
    match /stats/{statId} {
      allow read: if true;
      allow write: if false; // No one can write directly; use backend functions
    }
    
    // Allow public read on the users collection for counting, but secure individual docs
    match /users/{userId} {
      allow list: if true; // Allows counting users
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Secure other specific collections, allowing users to interact with their own data
    match /forumPosts/{postId} {
      allow read: if true;
      allow create, update: if request.auth != null;
    }
    
    match /supportRequests/{requestId} {
        allow create: if request.auth != null;
        allow read, write: if resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Default-deny all other access
    match /{path=**}/documents/{document} {
      allow read, write: if false;
    }
  }
}
